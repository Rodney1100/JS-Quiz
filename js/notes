    var resetState = function() {
        // nextBtnEl.classList.add("hide");
        while (answerBtnEl.firstChild) {
            answerBtnEl.removeChild(answerBtnEl.firstChild)
        }
    }
}
var showQuestion = function(questions) {
    questionEl.innerText = questions.question;
    var x = 0;
    while (x < questions.answer.length) {
        console.log(questions.answer[i]);
        var buttonEl = document.createElement("button");
        buttonEl.className = "btn-grid btn";
        buttonEl.innerText = questions.answer[x].text;
        answerBtnEl.appendChild(buttonEl);
        x++;
    }
    if (answer.correct) {
        buttonEl.dataset.correct = amswer.correct;
    }
    buttonEl.addEventListener("click", selectAnswers);
};


startBtnEl.addEventListener("click", startGame)
